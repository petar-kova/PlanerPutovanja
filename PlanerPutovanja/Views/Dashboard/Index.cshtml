@model PlanerPutovanja.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<section class="py-5">
    <div class="container">
        <h1 class="h2 mb-4">Dashboard</h1>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase mb-2">Total trips</h6>
                        <div class="display-5 fw-bold">@Model.TotalTrips</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase mb-2">Upcoming trips</h6>
                        <div class="display-5 fw-bold">@Model.UpcomingTrips</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase mb-2">Total expenses</h6>
                        <div class="display-6 fw-bold">
                            @Model.TotalExpenses.ToString("0.00")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-controller="Trips" asp-action="Index" class="btn btn-primary">
                Go to trips
            </a>
        </div>
    </div>
</section>
