@using Microsoft.AspNetCore.Identity
@using PlanerPutovanja.Models
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Home";
    var isSignedIn = SignInManager.IsSignedIn(User);
}

<div class="container py-5">
    <div class="home-hero p-5">
        <div class="col-lg-7">
            <h1 class="display-5 fw-bold mb-3">Planer Putovanja</h1>
            <p class="lead mb-4">
                Planiraj putovanja, aktivnosti i troškove na jednom mjestu — brzo i pregledno.
            </p>

            @if (!isSignedIn)
            {
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-primary btn-lg"
                       asp-area="Identity"
                       asp-page="/Account/Login">
                        Login
                    </a>

                    <a class="btn btn-outline-light btn-lg"
                       asp-area="Identity"
                       asp-page="/Account/Register">
                        Register
                    </a>
                </div>

                <p class="mt-3 mb-0 text-white-50">
                    Ulogiraj se i počni dodavati putovanja.
                </p>
            }
            else
            {
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-primary btn-lg"
                       asp-controller="Trips"
                       asp-action="Index">
                        My trips
                    </a>

                    <a class="btn btn-outline-light btn-lg"
                       asp-area="Identity"
                       asp-page="/Account/Manage/Index">
                        Profile
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4 g-3">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Trips</h5>
                    <p class="card-text mb-0">Kreiraj putovanja s destinacijom i datumima.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Activities</h5>
                    <p class="card-text mb-0">Dodaj aktivnosti i uređuj ih kasnije.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Expenses</h5>
                    <p class="card-text mb-0">Prati troškove i drži budžet pod kontrolom.</p>
                </div>
            </div>
        </div>
    </div>
</div>
