@model IEnumerable<PlanerPutovanja.Models.Trip>

@{
    ViewData["Title"] = "My trips";
    string currentFilter = ViewBag.CurrentFilter as string ?? "all";
}

<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">My trips</h1>
                <p class="text-muted mb-0">Overview of all your planned trips.</p>
            </div>

            <a asp-action="Create" class="btn btn-primary">
                + Create new trip
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5 border rounded-3 bg-light">
                <h5 class="mb-2">You don't have any trips yet.</h5>
                <p class="text-muted mb-3">Create your first trip and start planning.</p>
                <a asp-action="Create" class="btn btn-primary">
                    Create new trip
                </a>
            </div>
        }
        else
        {
            <!-- FILTER GUMBI -->
            <div class="btn-group mb-3" role="group">
                <a asp-action="Index"
                   asp-route-filter="all"
                   class="btn btn-sm btn-outline-secondary @(currentFilter == "all" ? "active" : "")">
                    All
                </a>
                <a asp-action="Index"
                   asp-route-filter="upcoming"
                   class="btn btn-sm btn-outline-secondary @(currentFilter == "upcoming" ? "active" : "")">
                    Upcoming
                </a>
                <a asp-action="Index"
                   asp-route-filter="inprogress"
                   class="btn btn-sm btn-outline-secondary @(currentFilter == "inprogress" ? "active" : "")">
                    In progress
                </a>
                <a asp-action="Index"
                   asp-route-filter="past"
                   class="btn btn-sm btn-outline-secondary @(currentFilter == "past" ? "active" : "")">
                    Past
                </a>
            </div>

            <div class="row g-3">
                @foreach (var trip in Model)
                {
                    var totalDays = (trip.EndDate - trip.StartDate).TotalDays + 1;
                    string status;

                    if (trip.StartDate > DateTime.Today)
                    {
                        status = "Upcoming";
                    }
                    else if (trip.EndDate < DateTime.Today)
                    {
                        status = "Past";
                    }
                    else
                    {
                        status = "In progress";
                    }

                    var activitiesCount = trip.Activities?.Count() ?? 0;
                    var expensesCount = trip.Expenses?.Count() ?? 0;

                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h5 class="card-title mb-1">@trip.Name</h5>
                                        <p class="text-muted mb-0">
                                            <span class="me-1">📍</span>@trip.Destination
                                        </p>
                                    </div>

                                    <span class="badge bg-light text-dark">
                                        @totalDays day@(totalDays == 1 ? "" : "s")
                                    </span>
                                </div>

                                <p class="small text-muted mb-1">
                                    @trip.StartDate.ToShortDateString()
                                    –
                                    @trip.EndDate.ToShortDateString()
                                </p>

                                <p class="small text-muted mb-2">
                                    <span class="badge bg-light text-dark me-1">
                                        @activitiesCount @("activity" + (activitiesCount == 1 ? "" : "ies"))
                                    </span>
                                    <span class="badge bg-light text-dark">
                                        @expensesCount @("expense" + (expensesCount == 1 ? "" : "s"))
                                    </span>
                                </p>

                                <p class="small mb-3">
                                    <span class="badge @(status == "Upcoming" ? "bg-success" : status == "Past" ? "bg-secondary" : "bg-primary")">
                                        @status
                                    </span>
                                </p>

                                <div class="mt-auto d-flex gap-2">
                                    <a asp-action="Details"
                                       asp-route-id="@trip.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Details
                                    </a>
                                    <a asp-action="Edit"
                                       asp-route-id="@trip.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
