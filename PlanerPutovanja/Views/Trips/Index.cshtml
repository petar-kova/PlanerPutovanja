@using Microsoft.AspNetCore.Identity
@using PlanerPutovanja.Models
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Home";
    var isSignedIn = SignInManager.IsSignedIn(User);
}

<section class="py-5">
    <div class="container">
        <div class="p-5 p-md-6 text-white rounded-4 position-relative overflow-hidden"
             style="
                background-image: linear-gradient(rgba(0,0,0,.55), rgba(0,0,0,.55)), url('/img/hero-travel.jpg');
                background-size: cover;
                background-position: center;
                min-height: 420px;">
            <div class="row align-items-center h-100">
                <div class="col-lg-7">
                    <h1 class="display-5 fw-bold mb-3">Planer Putovanja</h1>
                    <p class="lead mb-4">
                        Organiziraj putovanja, aktivnosti i troškove na jednom mjestu — brzo, čisto i pregledno.
                    </p>

                    @if (!isSignedIn)
                    {
                        <div class="d-flex flex-wrap gap-2">
                            <a class="btn btn-primary btn-lg"
                               asp-area="Identity"
                               asp-page="/Account/Login">
                                Login
                            </a>

                            <a class="btn btn-outline-light btn-lg"
                               asp-area="Identity"
                               asp-page="/Account/Register">
                                Register
                            </a>
                        </div>

                        <p class="mt-3 small text-white-50 mb-0">
                            Već imaš račun? Ulogiraj se i nastavi gdje si stao.
                        </p>
                    }
                    else
                    {
                        <div class="d-flex flex-wrap gap-2">
                            <a class="btn btn-primary btn-lg"
                               asp-controller="Trips"
                               asp-action="Index">
                                My trips
                            </a>

                            <a class="btn btn-outline-light btn-lg"
                               asp-area="Identity"
                               asp-page="/Account/Manage/Index">
                                Profile
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row mt-4 g-3">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Trips</h5>
                        <p class="card-text mb-0">Dodaj destinacije i datume putovanja.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Activities</h5>
                        <p class="card-text mb-0">Planiraj dan po dan i uređuj aktivnosti.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Expenses</h5>
                        <p class="card-text mb-0">Prati troškove i imaj pregled budžeta.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
