@model IEnumerable<PlanerPutovanja.Models.Trip>

@{
    ViewData["Title"] = "My trips";
}

<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">My trips</h1>
                <p class="text-muted mb-0">Pregled svih tvojih planiranih putovanja.</p>
            </div>

            <a asp-action="Create" class="btn btn-primary">
                + Create new trip
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5 border rounded-3 bg-light">
                <h5 class="mb-2">Još nemaš nijedno putovanje.</h5>
                <p class="text-muted mb-3">Dodaj svoje prvo putovanje i kreni s planiranjem.</p>
                <a asp-action="Create" class="btn btn-primary">
                    Create new trip
                </a>
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var trip in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-1">@trip.Name</h5>
                                <p class="text-muted mb-2">
                                    @trip.Destination
                                </p>
                                <p class="small text-muted mb-3">
                                    @trip.StartDate.ToShortDateString()
                                    –
                                    @trip.EndDate.ToShortDateString()
                                </p>

                                <div class="mt-auto d-flex gap-2">
                                    <a asp-action="Details"
                                       asp-route-id="@trip.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Details
                                    </a>
                                    <a asp-action="Edit"
                                       asp-route-id="@trip.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
